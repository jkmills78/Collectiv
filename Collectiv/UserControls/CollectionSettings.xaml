<UserControl x:Class="Collectiv.UserControls.CollectionSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Collectiv.UserControls"
             mc:Ignorable="d">
    <Grid>
        <Canvas>
            <Canvas.Background>
                <RadialGradientBrush GradientOrigin="0.5,0.5" 
                     Center="0.5,0.5"
                     RadiusX="0.5"
                     RadiusY="0.6">
                    <RadialGradientBrush.GradientStops>
                        <GradientStop Color="#34251f" Offset="0" />
                        <GradientStop Color="#000000" Offset="1.3" />
                    </RadialGradientBrush.GradientStops>
                </RadialGradientBrush>
            </Canvas.Background>
        </Canvas>
        <StackPanel>
            <TextBlock Text="Settings" Foreground="White"/>
            <Separator HorizontalAlignment="Stretch"/>
            <TextBlock Text="{Binding Collection.Name}" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
